<h1>Ajouter un nouveau propriétaire</h1>

<%= form_with model: @person, local: true do |form| %>
  <div>
    <%= form.label :firstName, "Prénom" %>
    <%= form.text_field :firstName %>
  </div>

  <div>
    <%= form.label :lastName, "Nom" %>
    <%= form.text_field :lastName %>
  </div>

  <div>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :phoneNumber, "Téléphone" %>
    <%= form.text_field :phoneNumber %>
  </div>

  <div>
    <%= form.submit "Créer Propriétaire" %>
  </div>
<% end %>

<%= link_to 'Retour', people_path %>
