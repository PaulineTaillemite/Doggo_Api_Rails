<h1>Ajouter un nouvel animal</h1>

<%= form_with(model: @animal, local: true) do |form| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "erreur") %> empêchent cet animal d'être sauvegardé :</h2>
      <ul>
        <% @animal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nom de l'animal" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :species, "Espèce" %>
    <%= form.text_field :species %>
  </div>

  <div>
    <%= form.label :breed, "Race" %>
    <%= form.text_field :breed %>
  </div>

  <div>
    <%= form.label :color, "Couleur" %>
    <%= form.text_field :color %>
  </div>

  <div>
    <%= form.label :weight, "Poids (en grammes)" %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :dateOfBirth, "Date de naissance" %>
    <%= form.date_field :dateOfBirth %>
  </div>

  <div>
    <%= form.label :owner_id, "Propriétaire (ID)" %>
    <%= form.number_field :owner_id %>
  </div>

  <div>
    <%= form.submit "Créer l'animal" %>
  </div>
<% end %>

<%= link_to 'Retour à la liste des animaux', animals_path %>
